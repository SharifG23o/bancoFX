<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.InicioControlador">
   <children>
   
       <Label text="Bienvenido a su banco de confianza">
         <font>
            <Font name="Old English Text MT" size="24.0" />
         </font>
       </Label>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="BanUq">
         <font>
            <Font name="Castellar" size="15.0" />
         </font>
      </Text>
   
       <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
           <image>
               <Image url="@img/logo.png" />
           </image>
       </ImageView>
   
       <Label text="¿Qué desea hacer?">
           <font>
                <Font name="Georgia" size="16.0" />
           </font>
       </Label>
   
       <HBox alignment="CENTER" spacing="20.0">
      <children>
              <Button fx:id="sesionbutton" minHeight="40.0" minWidth="130.0" onAction="#irIniciarSesion" style="-fx-background-color: #00807a; -fx-text-fill: white; -fx-background-radius: 50px; -fx-border-radius: 50px; -fx-border-width: 2px;" text="Iniciar sesión" />
              <Button fx:id="registrarButton" minHeight="40.0" minWidth="130.0" onAction="#irRegistroCliente" style="-fx-background-color: #00807a; -fx-text-fill: white; -fx-background-radius: 50px; -fx-border-radius: 50px; -fx-border-width: 2px;" text="Registrarse" />
      </children>
   
       </HBox>
   </children>

</VBox>
